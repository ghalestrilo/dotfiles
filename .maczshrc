# Dev a seg jam (WIP)
segjam(){
  echo $1
  jack_control start && \
  tmux new-session -s jam "zsh -c \"node --inspect target/js/compiled/segue.js $1\""\; \
    new-window "sclang"                                            \; \
    new-window "ghci -ghci-script %opt{tidal_boot_file}" \; \
    # new-window "cninjam jam.miniestereo.org:2049 -user anonymous:ghales -jack" \; \
    select-window -t 0
  jack_control exit
}

